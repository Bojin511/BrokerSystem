<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Images/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/highcharts.js" type="text/javascript"></script>


</head>

<body background="/Images/FuturesTrading.jpg"> 
    <div class="page">
        <header>
            <div id="title">
                <h1>Trading Broker System</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Price", "CompanyPriceList", "Home")</li>
                    <li>@Html.ActionLink("Trade Requests", "Index", "ViewTradeRequest")</li>
                    <li>@Html.ActionLink("Trade", "doTrade", "Trade")</li>
                    <li>@Html.ActionLink("User Preferences", "Index", "UserPreferences")</li>
                    <li>@Html.ActionLink("Portfolio", "Index", "Portfolio")</li>
                    <li>@Html.ActionLink("User Request", "Index", "SendUserRequest")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
